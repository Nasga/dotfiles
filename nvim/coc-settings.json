{
  "javascript.suggestionActions.enabled": false,
  "coc.preferences.formatOnSaveFiletypes": ["typescript", "javascript", "css", "Markdown"],
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
